/*
 * NOTE DON'T DELETE THIS FILE, THIS HELPS WITH AUTOMATIC IMPORTS IN JS 
 * AND OTHER AUTOMATIC SETTINGS NEEDED FOR IMPROVED DX IN JS
 * TYPE CHECKING HAS BEEN DISABLED SO YOU HAVE NOTHING TO WORRY ABOUT
 */
{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "checkJs": false,
        "allowJs": true,
        "strict": true,
        "rootDir": ".",
        "baseUrl": ".",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "DOM.AsyncIterable"
        ],
        "paths": {
            "/*": [
                "./*"
            ]
        }
    },
    "include": [
        "./**/*.js",
        "./*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}